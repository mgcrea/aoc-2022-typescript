{
  "name": "adventofcode",
  "version": "0.0.0",
  "description": "",
  "private": true,
  "author": "",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "vitest src/bin/$(ls src/bin | tail -n1 | cut -c'1-2').ts",
    "download": "DAY=$(ls src/bin | tail -n1 | cut -c'1-2') aoc download --overwrite --day ${DAY} --input-file src/inputs/${DAY}.txt --puzzle-file src/puzzles/${DAY}.md",
    "solve": "DAY=$(ls src/bin | tail -n1 | cut -c'1-2') npm start",
    "build": "tsup src/index.ts --format esm --sourcemap --dts --clean",
    "preview": "node --experimental-specifier-resolution=node --no-warnings dist/index.js",
    "prettify": "prettier --write src/ test/",
    "spec": "vitest --run",
    "lint": "eslint src/ test/",
    "prettycheck": "prettier --check src/ test/",
    "typecheck": "tsc --noEmit",
    "test": "npm run lint && npm run prettycheck && npm run typecheck && npm run spec",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@swc/core": "^1.3.35",
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/node": "^18.14.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vitest": "^0.0.44",
    "prettier": "^2.8.4",
    "prettier-plugin-organize-imports": "^3.2.2",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  }
}
